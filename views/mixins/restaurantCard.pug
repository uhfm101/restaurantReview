mixin restaurantCard(restaurant)
    a.card(href=`/restaurant/${restaurant.id}`)
        div
            div.card
                div.card-header
                    div.backdrop
                    img.card-header-image(src=restaurant.image)
                div.card-body
                    div.card-details
                        div.card-title=restaurant.name
                        strong.emphasize Owned by #{restaurant.owner.first_name}